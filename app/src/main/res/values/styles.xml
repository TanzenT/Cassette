<resources >
    <!-- Base application theme. -->
    <style name="BaseTheme" parent="Theme.AppCompat.Light.NoActionBar"/>
    <style name="BaseDialogTheme" parent="Theme.AppCompat.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="colorControlHighlight">?android:attr/colorControlHighlight</item>
    </style>

    <!--dialog白天模式-->
    <style name="Dialog.DayTheme" parent="BaseDialogTheme">
        <item name="background_color_main">@color/day_background_color_main</item>
        <item name="background_color_1">@color/day_background_color_1</item>
        <item name="background_color_2">@color/day_background_color_2</item>
        <item name="background_color_3">@color/day_background_color_3</item>
        <item name="background_grid">@drawable/bg_grid_day</item>
        <item name="background_list">@drawable/bg_list_day</item>
        <item name="background_list_1">@drawable/bg_list_1_day</item>
        <item name="background_common">@drawable/bg_common_ripple_day</item>
        <item name="text_color_primary">@color/day_textcolor_primary</item>
        <item name="text_color">@color/day_textcolor</item>
        <item name="colorControlHighlight">@color/day_ripple_color</item>
        <item name="divider_color">@color/day_list_divider</item>
    </style>

    <!--dialog夜间模式-->
    <style name="Dialog.NightTheme" parent="BaseDialogTheme">
        <item name="background_color_main">@color/night_background_color_main</item>
        <item name="background_color_1">@color/night_background_color_1</item>
        <item name="background_color_2">@color/night_background_color_2</item>
        <item name="background_color_3">@color/night_background_color_3</item>
        <item name="background_grid">@drawable/bg_grid_night</item>
        <item name="background_list">@drawable/bg_list_night</item>
        <item name="background_list_1">@drawable/bg_list_1_night</item>
        <item name="background_common">@drawable/bg_common_ripple_night</item>
        <item name="text_color_primary">@color/night_textcolor_primary</item>
        <item name="text_color">@color/night_textcolor</item>
        <item name="colorControlHighlight">@color/night_ripple_color</item>
        <item name="divider_color">@color/night_list_divier</item>
        <item name="actionBarTabStyle">@style/CustomTabLayout.Dark</item>
    </style>


    <style name="AppTheme" parent="BaseTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/transparent</item>
        <item name="colorPrimaryDark">@color/transparent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar.Translucent">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AudioHolderStyle" parent="ActivityStyle">
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="CustomTabLayout.Light" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/white</item>
        <item name="tabIndicatorHeight">3dp</item>
        <item name="tabTextAppearance">@style/CustomTabTextAppearance.Light</item>
        <item name="tabSelectedTextColor">@color/white</item>
    </style>
    <style name="CustomTabLayout.Dark" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/black</item>
        <item name="tabIndicatorHeight">3dp</item>
        <item name="tabTextAppearance">@style/CustomTabTextAppearance.Dark</item>
        <item name="tabSelectedTextColor">@color/black</item>
    </style>

    <style name="CustomTabTextAppearance.Light" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/tab_text_size</item>
        <item name="android:textColor">@color/light_normal_tab_text_color</item>
        <item name="textAllCaps">true</item>
    </style>
    <style name="CustomTabTextAppearance.Dark" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/tab_text_size</item>
        <item name="android:textColor">@color/dark_normal_tab_text_color</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="AnimBottom" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/slide_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/slide_bottom_out</item>
    </style>

    <style name="AnimPopup">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <!--锁屏-->
    <style name="LockScreenActivity" parent="AppTheme.NoActionBar.Translucent">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <!--白天主题菜单-->
    <style name="PopupMenuDayStyle" parent="Base.ThemeOverlay.AppCompat.Light">
        <item name="android:disabledAlpha">0.5</item>
        <item name="android:textColor">@color/day_textcolor_primary</item>
    </style>
    <!--夜间模式菜单-->
    <style name="PopupMenuNightStyle" parent="Base.ThemeOverlay.AppCompat.Dark">
        <item name="android:disabledAlpha">0.5</item>
        <item name="android:textColor">@color/night_textcolor_primary</item>
    </style>

    <!--popup_style-->

    <style name="AnimActivity">
        <item name="android:activityOpenExitAnimation">@anim/slide_left_out</item>
        <item name="android:activityOpenEnterAnimation">@anim/slide_left_in</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_right_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_right_in</item>
    </style>

    <style name="ActivityStyle" parent="@style/AppTheme">
        <item name="android:windowAnimationStyle">@style/AnimActivity</item>
    </style>

    <style name="AudioHolderStyle.Night" parent="NightTheme">
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlNormal">@color/white_f2f2f2</item>
        <item name="android:textColorHint">@color/night_textcolor</item>
        <item name="android:windowBackground">@color/night_background_color_3</item>
    </style>

    <style name="AppShortcut" parent="ActivityStyle">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="DayTheme" parent="@style/ActivityStyle">
        <item name="background_color_main">@color/day_background_color_main</item>
