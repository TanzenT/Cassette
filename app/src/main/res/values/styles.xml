        <item name="android:textColor">@color/purple_555393</item>
        <item name="colorControlActivated">@color/purple_555393</item>
        <item name="colorAccent">@color/purple_555393</item>
        <item name="colorControlHighlight">@color/night_ripple_color</item>
        <item name="textCursor">@drawable/bg_cursor_light</item>
        <item name="android:tabWidgetStyle">@style/CustomTabLayout.Light</item>
    </style>

