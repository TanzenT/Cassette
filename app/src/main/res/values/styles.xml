        <item name="background_list_1">@drawable/bg_list_1_day</item>
        <item name="background_common">@drawable/bg_common_ripple_day</item>
        <item name="text_color_primary">@color/day_textcolor_primary</item>
        <item name="text_color">@color/day_textcolor</item>
        <item name="default_album">@drawable/album_empty_bg_day</item>
        <item name="default_artist">@drawable/artist_empty_bg_day</item>
        <item name="colorControlHighlight">@color/day_ripple_color</item>
        <item name="ripple_color">@color/day_ripple_color</item>
        <item name="divider_color">@color/day_list_divider</item>
        <item name="android:popupMenuStyle">@style/Base.ThemeOverlay.AppCompat.Light</item>
        <item name="textCursor">@drawable/bg_cursor_light</item>
        <item name="android:tabWidgetStyle">@style/CustomTabLayout.Light</item>
    </style>


    <!--夜间模式-->
    <style name="NightTheme" parent="@style/ActivityStyle">
        <item name="material_color_primary">@color/night_background_color_3</item>
        <item name="material_color_primary_dark">@color/night_background_color_3</item>
