<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:id="@+id/root">
  <android.support.design.widget.AppBarLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.Toolbar
      android:id="@+id/toolbar"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:layout_scrollFlags="scroll|enterAlways"/>
  </android.support.design.widget.AppBarLayout>

  <ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
          android:id="@+id/setting_common_title"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/common"
          android:layout_margin="@dimen/d14_size"
          android:textSize="@dimen/s16_size"
          android:textColor="?attr/colorAccent"/>
        <LinearLayout
          android:id="@+id/setting_filter_container"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:gravity="center_vertical"
          android:paddingTop="@dimen/d10_size"
          android:paddingBottom="@dimen/d10_size"
          android:paddingLeft="@dimen/d16_size"
          android:background="?attr/background_rect_ripple">
          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/music_filter"
            android:textColor="?attr/text_color_primary"
            android:textSize="@dimen/s16_size"
            android:layout_marginBottom="@dimen/d2_size"/>
          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/set_filter_size"
            android:textColor="?attr/text_color_secondary"
            android:textSize="@dimen/s14_size"/>
        </LinearLayout>

        <LinearLayout
          android:id="@+id/setting_lockscreen_container"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:gravity="center_vertical"
          android:paddingLeft="@dimen/d16_size"
          android:paddingTop="@dimen/d10_size"
          android:paddingBottom="@dimen/d10_size"
          android:background="?attr/background_rect_ripple">
          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lockscreen_show"
            android:textColor="?attr/text_color_primary"
            android:textSize="@dimen/s16_size"
            android:layout_marginBottom="@dimen/d2_size"/>
          <TextView
            android:id="@+id/setting_lockscreen_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/choose_or_close_lockscreen"
            android:textColor="?attr/text_color_secondary"
            android:textSize="@dimen/s14_size"/>
        </LinearLayout>

        <LinearLayout
          android:id="@+id/setting_scan_container"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:paddingTop="@dimen/d10_size"
          android:paddingBottom="@dimen/d10_size"
          android:paddingLeft="@dimen/d16_size"
          android:background="?attr/background_rect_ripple"
          android:orientation="vertical"
          android:gravity="center_vertical">
          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/manual_scan"
            android:textColor="?attr/text_color_primary"
            android:textSize="@dimen/s16_size"
            android:layout_marginBottom="@dimen/d2_size"/>
          <TextView
            android:id="@+id/setting_scan_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/manual_scan_tip"
            android:textColor="?attr/text_color_secondary"
            android:textSize="@dimen/s14_size"/>
        </LinearLayout>

        <LinearLayout
          android:id="@+id/setting_import_playlist_container"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:paddingTop="@dimen/d10_size"
          android:paddingBottom="@dimen/d10_size"
          android:paddingLeft="@dimen/d16_size"
          android:background="?attr/background_rect_ripple"
          android:orientation="vertical"
          android:gravity="center_vertical">
          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/playlist_import"
            android:textColor="?attr/text_color_primary"
            android:textSize="@dimen/s16_size"
            android:layout_marginBottom="@dimen/d2_size"/>
          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/playlist_import_tip"
            android:textColor="?attr/text_color_secondary"
            android:textSize="@dimen/s14_size"/>
        </LinearLayout>

        <LinearLayout
          android:id="@+id/setting_export_playlist_container"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:paddingTop="@dimen/d10_size"
          android:paddingBottom="@dimen/d10_size"
          android:paddingLeft="@dimen/d16_size"
          android:background="?attr/background_rect_ripple"
          android:orientation="vertical"
          android:gravity="center_vertical">
          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/export_playlist"
            android:textColor="?attr/text_color_primary"
            android:textSize="@dimen/s16_size"
            android:layout_marginBottom="@dimen/d2_size"/>
          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/export_play_list_tip"
            android:textColor="?attr/text_color_secondary"
            android:textSize="@dimen/s14_size"/>
        </LinearLayout>

        <LinearLayout
          android:id="@+id/setting_restore_delete_container"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:paddingTop="@dimen/d10_size"
          android:paddingBottom="@dimen/d10_size"
          android:paddingLeft="@dimen/d16_size"
          android:background="?attr/background_rect_ripple"
          android:orientation="vertical"
          android:gravity="center_vertical">

          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/restore_songs"
            android:textColor="?attr/text_color_primary"
            android:textSize="@dimen/s16_size"
            android:layout_marginBottom="@dimen/d2_size"/>

          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/restore_songs_tip"
            android:textColor="?attr/text_color_secondary"
            android:textSize="@dimen/s14_size"/>
        </LinearLayout>

        <LinearLayout
          android:id="@+id/setting_language_container"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:paddingTop="@dimen/d10_size"
          android:paddingBottom="@dimen/d10_size"
          android:paddingLeft="@dimen/d16_size"
          android:background="?attr/background_rect_ripple"
          android:orientation="vertical"
          android:gravity="center_vertical"
          android:visibility="visible">

          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/select_language"
            android:textColor="?attr/text_color_primary"
            android:textSize="@dimen/s16_size"
            android:layout_marginBottom="@dimen/d2_size"/>

          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/select_language_tips"
            android:textColor="?attr/text_color_secondary"
            android:textSize="@dimen/s14_size"/>
        </LinearLayout>

        <RelativeLayout
          android:id="@+id/setting_breakpoint_container"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:paddingTop="@dimen/d10_size"
          android:paddingBottom="@dimen/d10_size"
          android:background="?attr/background_rect_ripple">
          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/setting_breakpoint_switch"
            android:layout_marginLeft="@dimen/d16_size"
            android:layout_marginRight="@dimen/d16_size">
            <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/resume_breakpoint"
              android:textColor="?attr/text_color_primary"
              android:textSize="@dimen/s16_size"
              android:layout_marginBottom="@dimen/d2_size"/>
            <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/resume_breakpoint_tip"
              android:textColor="?attr/text_color_secondary"
              android:textSize="@dimen/s14_size"/>
          </LinearLayout>
          <android.support.v7.widget.SwitchCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textOn=""
            android:textOff=""
            android:id="@+id/setting_breakpoint_switch"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="@dimen/d14_size"/>
        </RelativeLayout>

        <RelativeLayout
          android:id="@+id/setting_shake_container"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:paddingTop="@dimen/d10_size"
          android:paddingBottom="@dimen/d10_size"
          android:background="?attr/background_rect_ripple">
          <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/d16_size"
            android:layout_marginRight="@dimen/d16_size">
            <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/shake"
              android:textColor="?attr/text_color_primary"
              android:textSize="@dimen/s16_size"
              android:layout_marginBottom="@dimen/d2_size"/>
            <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/shake_tip"
              android:textColor="?attr/text_color_secondary"
              android:textSize="@dimen/s14_size"/>
          </LinearLayout>
          <android.support.v7.widget.SwitchCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textOn=""
            android:textOff=""
            android:id="@+id/setting_shake_switch"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="@dimen/d14_size"/>
        </RelativeLayout>

        <RelativeLayout
          android:id="@+id/setting_displayname_container"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:paddingTop="@dimen/d10_size"
          android:paddingBottom="@dimen/d10_size"
          android:background="?attr/background_rect_ripple">

          <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/d16_size"
            android:layout_marginRight="@dimen/d16_size">

            <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/show_displayname"
              android:textColor="?attr/text_color_primary"
              android:textSize="@dimen/s16_size"
              android:layout_marginBottom="@dimen/d2_size"/>

            <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/show_displayname_tip"
              android:textColor="?attr/text_color_secondary"
              android:textSize="@dimen/s14_size"/>
          </LinearLayout>

          <android.support.v7.widget.SwitchCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textOn=""
            android:textOff=""
            android:id="@+id/setting_displayname_switch"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="@dimen/d14_size"/>
        </RelativeLayout>

        <View
          android:layout_width="match_parent"
          android:layout_height="1px"
          android:background="?attr/divider_color"/>
      </LinearLayout>

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
          android:id="@+id/setting_color_title"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/color"
          android:layout_margin="@dimen/d14_size"
          android:textSize="@dimen/s16_size"
          android:textColor="?attr/colorAccent"/>
        <LinearLayout
          android:id="@+id/setting_general_theme_container"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:paddingTop="@dimen/d10_size"
          android:paddingBottom="@dimen/d10_size"
          android:background="?attr/background_rect_ripple"
          android:orientation="vertical"
          android:gravity="center_vertical"
          android:paddingLeft="@dimen/d16_size">
          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/general_theme"
            android:textColor="?attr/text_color_primary"
            android:textSize="@dimen/s16_size"
            android:layout_marginBottom="@dimen/d2_size"/>
          <TextView
            android:id="@+id/setting_general_theme_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?attr/text_color_secondary"
            android:textSize="@dimen/s14_size"/>
        </LinearLayout>
        <RelativeLayout
          android:id="@+id/setting_primary_color_container"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:paddingTop="@dimen/d10_size"
          android:paddingBottom="@dimen/d10_size"
          android:background="?attr/background_rect_ripple">
          <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/d16_size">
            <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/primary_color"
              android:textColor="?attr/text_color_primary"
              android:textSize="@dimen/s16_size"
              android:layout_marginBottom="@dimen/d2_size"/>
            <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/primary_color_tip"
              android:textColor="?attr/text_color_secondary"
              android:textSize="@dimen/s14_size"/>
          </LinearLayout>
          <ImageView
            android:id="@+id/setting_color_primary_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bg_circle_small"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/d14_size"/>
        </RelativeLayout>

        <RelativeLayout
          android:id="@+id/setting_accent_color_container"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:paddingTop="@dimen/d10_size"
          android:paddingBottom="@dimen/d10_size"
          android:background="?attr/background_rect_ripple">
          <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/d16_size">
            <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/accent_color"
              android:textColor="?attr/text_color_primary"
              android:textSize="@dimen/s16_size"
              android:layout_marginBottom="@dimen/d2_size"/>
            <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/accent_color_tip"
              android:textColor="?attr/text_color_secondary"
              android:textSize="@dimen/s14_size"/>
          </LinearLayout>
          <ImageView
            android:id="@+id/setting_color_accent_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bg_circle_small"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/d14_size"/>
        </RelativeLayout>


        <RelativeLayout
          android:id="@+id/setting_immersive_container"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:paddingTop="@dimen/d10_size"
          android:paddingBottom="@dimen/d10_size"
          android:background="?attr/background_rect_ripple">
          <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/d16_size"
            android:layout_marginRight="@dimen/d16_size">
            <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/immersive"
              android:textColor="?attr/text_color_primary"
              android:textSize="@dimen/s16_size"
              android:layout_marginBottom="@dimen/d2_size"/>
            <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/immersive_tip"
              android:textColor="?attr/text_color_secondary"
              android:textSize="@dimen/s14_size"/>
          </LinearLayout>
          <android.support.v7.widget.SwitchCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textOn=""
            android:textOff=""
            android:id="@+id/setting_immersive_switch"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="@dimen/d14_size"/>
        </RelativeLayout>

        <RelativeLayout
          android:id="@+id/setting_navigation_container"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_below="@id/setting_immersive_container"
          android:paddingTop="@dimen/d10_size"
          android:paddingBottom="@dimen/d10_size"
          android:background="?attr/background_rect_ripple">
          <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/d16_size"
            android:layout_marginRight="@dimen/d16_size">
            <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/navigation_color"
              android:textColor="?attr/text_color_primary"
              android:textSize="@dimen/s16_size"
              android:layout_marginBottom="@dimen/d2_size"/>
            <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/navigation_is_show"
              android:textColor="?attr/text_color_secondary"
              android:textSize="@dimen/s14_size"/>
          </LinearLayout>
          <android.support.v7.widget.SwitchCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textOn=""
            android:textOff=""
            android:id="@+id/setting_navaigation_switch"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="@dimen/d14_size"/>
        </RelativeLayout>

        <View
          android:layout_below="@id/setting_navigation_container"
          android:layout_width="match_parent"
          android:layout_height="1px"
          android:background="?attr/divider_color"/>
      </LinearLayout>

      <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
          android:id="@+id/setting_library_title"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/library"
          android:layout_alignParentLeft="true"
          android:layout_alignParentTop="true"
          android:layout_margin="@dimen/d14_size"
          android:textSize="@dimen/s16_size"
          android:textColor="?attr/colorAccent"/>
        <LinearLayout
          android:id="@+id/setting_library_category_container"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:gravity="center_vertical"
          android:layout_centerVertical="true"
          android:layout_alignParentLeft="true"
          android:layout_below="@id/setting_library_title"
          android:paddingTop="@dimen/d10_size"
          android:paddingBottom="@dimen/d10_size"
          android:paddingLeft="@dimen/d16_size"
          android:background="?attr/background_rect_ripple">
          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/library_category"
            android:textColor="?attr/text_color_primary"
            android:textSize="@dimen/s16_size"
            android:layout_marginBottom="@dimen/d2_size"/>
          <TextView
            android:id="@+id/setting_library_category_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/configure_library_category"
            android:textColor="?attr/text_color_secondary"
            android:textSize="@dimen/s14_size"/>
        </LinearLayout>

        <View
          android:layout_below="@id/setting_library_category_container"
          android:layout_width="match_parent"
          android:layout_height="1px"
          android:background="?attr/divider_color"/>
      </RelativeLayout>

      <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
          android:id="@+id/setting_player_title"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/player"
          android:layout_alignParentLeft="true"
          android:layout_alignParentTop="true"
          android:layout_margin="@dimen/d14_size"
          android:textSize="@dimen/s16_size"
          android:textColor="?attr/colorAccent"/>
        <LinearLayout
          android:id="@+id/setting_player_bottom_container"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:gravity="center_vertical"
          android:layout_centerVertical="true"
          android:layout_alignParentLeft="true"
          android:layout_below="@id/setting_player_title"
          android:paddingTop="@dimen/d10_size"
          android:paddingBottom="@dimen/d10_size"
          android:paddingLeft="@dimen/d16_size"
          android:background="?attr/background_rect_ripple">
          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/show_on_bottom"
            android:textColor="?attr/text_color_primary"
            android:textSize="@dimen/s16_size"
            android:layout_marginBottom="@dimen/d2_size"/>
          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/show_of_bottom_tip"
            android:textColor="?attr/text_color_secondary"
            android:textSize="@dimen/s14_size"/>
        </LinearLayout>

        <RelativeLayout
          android:id="@+id/setting_screen_container"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_below="@id/setting_player_bottom_container"
          android:paddingTop="@dimen/d10_size"
          android:paddingBottom="@dimen/d10_size"
          android:background="?attr/background_rect_ripple">
          <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/d16_size"
            android:layout_marginRight="@dimen/d16_size">
            <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/screen_always_on_title"
              android:textColor="?attr/text_color_primary"
              android:textSize="@dimen/s16_size"
              android:layout_marginBottom="@dimen/d2_size"/>
            <TextView
              android:layout_width="wrap_content"
