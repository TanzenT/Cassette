<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/background_grid_color">
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/d1_size"
        android:background="?attr/divider_color"
        android:layout_alignParentTop="true"
        android:id="@+id/divider"/>

    <tanzent.cassette.ui.widget.fastcroll_recyclerview.FastScrollRecyclerView
        android:id="@+id/recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/divider"
        app:bubbleColor="?attr/colorAccent"
        app:handleColor="?attr/colorAccent"
        app:hideScrollbar="true"
        app:showTrack="true"/>

</RelativeLayout>